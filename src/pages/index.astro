---
import Layout from "@/widgets/layouts/base-layout/base-layout.astro";
import Feed from "@/widgets/feed/ui/feed.astro";
import Button from "@/shared/ui/button/button.astro";
import Container from "@/shared/ui/container/container.astro";
---

<Layout>
  <Container>
    <div class="flex flex-col text-center md:flex-row items-center gap-6 mt-30">
      <p class="font-medium text-xl xl:text-2xl">
        Let the fridge be your memory ;)
      </p>
      <a href="/fridge">
        <Button size="medium" variant="blue">Open my fridge</Button>
      </a>
    </div>
    <Feed />
  </Container>
</Layout>
